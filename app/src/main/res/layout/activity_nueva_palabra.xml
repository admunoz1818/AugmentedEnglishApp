<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.familyteam.augmentedenglishapp.NuevaPalabraActivity">

    <TextView
        android:id="@+id/tvNombre"
        android:text="Nombre"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvTraduccion"
        android:text="Traducción"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtTraduccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvPronunciacion"
        android:text="Pronunciación"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtPronunciacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/relative_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:id="@+id/tvImagen"
            android:text="Imagen"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/txtImagen"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/nodis"/>
        <Button
            android:id="@+id/btnSeleccionar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:text="Seleccionar..."
            android:layout_toRightOf="@+id/txtImagen"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btnCrearPalabra"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="85dp"
        android:textSize="20sp"
        android:background="#ffffd048"
        android:layout_marginTop="5dp"
        android:text="Crear"/>

</LinearLayout>
